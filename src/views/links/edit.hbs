<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{links.idLink}}" method="POST">
                        <div class="form-group">
                            <input name="title" type="text" value="{{links.title}}" class="form-control" placeholder="Title" autofocus>
                        </div>
                        <div class="form-group">
                            <input name="url" type="url" value="{{links.url}}" class="form-control" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description"> {{links.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Edit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>